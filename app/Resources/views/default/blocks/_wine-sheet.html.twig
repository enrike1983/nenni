<div class="m-wine-sheet">
    <div class="m-wine-sheet__wrapper">
        <div class="m-wine-sheet__frame"></div>
        <div class="m-wine-sheet__id">
            <div class="id-logo"><img src="{{ asset('img/wine-logo.png') }}" alt=""></div>
            <div class="id-wings"><img src="{{ asset('img/wine-wings.png') }}" alt=""></div>
            <p class="id-caption">{{ block.getTitle()|raw }}</p>
        </div>
        <div class="m-wine-sheet__bottle">
            <img src="{{ vich_uploader_asset(block, 'imageFile') }}" alt="">
        </div>
        <div class="m-wine-sheet__info">
            <p class="info-text">{{ block.getContent()|raw }}</p>
            <a class="info-cta" href="{{ block.getLink() }}">{{ block.getLinkLabel() }}</a>
        </div>
    </div>
</div>