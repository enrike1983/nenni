{% extends 'base.html.twig' %}

{% import "_macro/_m-video-ratio.html" as mVideoRatio %}
{% import "_macro/_m-full-text.html" as mFullText %}
{% import "_macro/_m-text-media.html" as mTextMedia %}

{% block content %}
    <div class="barba-container" data-namespace="homepage">

        <div class="m-img-full">
            <div class="m-intro-site">
                <div class="m-logo  m-logo--white  m-logo--center">
                    {% include "_partials/logo.html" %}
                </div>
                <h2 class="m-intro-site__title   m-title  m-title--white  a-fade-letter">
                    INTRO BLOCK
                </h2>
            </div>
            <img src='/img/le-vigne/hero.jpg' alt="" class="m-img-full__img" data-preload data-intro-scale>
            <span class="m-intro-site__explore"><span></span></span>
        </div>

        {% for block in blocks %}
            {{ include(block.getTemplate(), { 'block': block }) }}
        {% endfor %}
    </div>
{% endblock %}